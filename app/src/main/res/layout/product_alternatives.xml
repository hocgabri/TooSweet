<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtProductName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:text="Produkt Name" />

    <ImageView
        android:id="@+id/imgProduct2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtProductName2"
        android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtSug100g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgProduct2"
        android:layout_marginStart="54dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/imgProduct2"
        android:text="Sugar/100g" />

    <TextView
        android:id="@+id/txtSugtot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtSug100g"
        android:layout_marginStart="41dp"
        android:layout_toEndOf="@+id/txtSug100g"
        android:text="total Sugar [g]" />

    <TextView
        android:id="@+id/txtAlternativeName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgProduct2"
        android:layout_below="@+id/imgProduct2"
        android:layout_marginTop="57dp"
        android:text="Alternative Product" />

    <ListView
        android:id="@+id/listAlternatives"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/txtAlternativeName2"
        android:layout_below="@+id/txtAlternativeName2"
        android:layout_marginStart="35dp"
        android:layout_marginTop="33dp" />
</RelativeLayout>
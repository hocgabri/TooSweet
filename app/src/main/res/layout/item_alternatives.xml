<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgAlternative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="56dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtAlternativeName"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgAlternative"
        android:layout_marginStart="18dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/imgAlternative"
        android:text="Alternative Name" />

    <ProgressBar
        android:id="@+id/progressBarSugtotAlt"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtSugtotAlt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp" />

    <TextView
        android:id="@+id/txtSugtotAlt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtAlternativeName"
        android:layout_alignBottom="@+id/txtAlternativeName"
        android:layout_marginEnd="26dp"
        android:layout_toStartOf="@+id/progressBarSugtotAlt"
        android:text="Sugar total [g]" />

    <TextView
        android:id="@+id/txtAltSugReduction"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtAlternativeName"
        android:layout_toStartOf="@+id/txtSugtotAlt"
        android:text="Sugar Reduction [%]" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/txteditCSVup"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Please enter your CVS from your Migros Cumulus account"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/txtHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:elegantTextHeight="true"
        android:text="Welcome to TooSweet"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ImageView
        android:id="@+id/imgSugar1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/txteditCSVup"
        android:layout_marginTop="14dp"
        android:layout_toStartOf="@+id/imgButChart"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/sugar1" />

    <ImageView
        android:id="@+id/imgpfeil"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/imgSugar1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/pfeil" />

    <ImageView
        android:id="@+id/imgSugar2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imgSugar1"
        android:layout_toEndOf="@+id/imgButChart"
        app:srcCompat="@drawable/sugar2" />

    <ImageButton
        android:id="@+id/imgButChart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/verlaufschart" />

    <ImageButton
        android:id="@+id/imgButReceipt"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imgSugar1"
        android:layout_alignTop="@+id/imgButChart"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/quittungsbild" />

    <ImageButton
        android:id="@+id/imgButProfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imgSugar2"
        android:layout_alignTop="@+id/imgButChart"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/profilbild" />

</RelativeLayout>